<!-- <br>============== ログイン中ユーザーの《<%= @tl %>》という名前のリスト内のツイート、デフォルト件数だけ表示 ==================================<br><br>

 -->

<header>
  <h1>《<%= @tl_name %>》のタイムライン</h1>
    <ul id="normal" class="dropmenu">
      <li><a href="#">リスト</a>
        <ul>
          <% @lists.each do |list| %>
            <li><%= link_to list.name, listtimeline_path(id: list.id, name: list.name) %>
            </li>
          <% end %>
        </ul>
      </li>
    </ul>
</header>

<!-- <footer>
  <h1>《<%= @tl %>》のタイムライン</h1>
</footer> -->
<div class="contents">
  <% @tweets_with_image.each do |tl| %>
    <div class="message clearfix">
      <%= image_tag(tl.user.profile_image_url) %>
      <div class="message_box">
        <p class="user_name">
          <%= tl.user.name %> @<%= tl.user.screen_name %><br>
        </p>
        <p class="text">
          <%= tl.text %>
        </p>
          <p class="media">
            <% tl.media.each do |media| %>
              <%= image_tag(media.media_url) %>
            <% end %>
          </p>
      </div>
    </div>
  <% end %>
</div>